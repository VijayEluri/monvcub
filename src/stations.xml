<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<meta name="viewport" content="user-scalable=no, width=device-width" />
		<link rel="stylesheet" href="defaut.css" type="text/css" />
		<title>Mes stations</title>
	</head>
	<body>
		<div id="header">
			<h1>Stations</h1>
		</div>
		<div id="content">
			<ul>
				#foreach ( $station in $stations)
				<li>
					<a href="$station.nom">$station.Nom</a>
					<div class="statut">
						#if ($station.estEnMaintenance())
							<span class="en-maintenance">Maintenance</span>
						#else
							<span class="#if ($station.VelosDisponibles > 0) ok #else ko #end">$station.VelosDisponibles</span><span class="#if ($station.PlacesDisponibles > 0) ok #else ko #end">$station.PlacesDisponibles</span>
						#end
					</div>
				</li>
				#end
			</ul>
		</div>
	</body>
</html>