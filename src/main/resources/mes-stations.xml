<li data-role="list-divider"><span class="station">Stations</span>
<p class="ui-li-aside">
<span>V&eacute;los</span>
<br />
<span>Places</span>
</p>
</li>
#if ( $stations.size() == 0)
<li><span class="station">Aucune station s&eacute;lectionn&eacute;e. Cliquez sur Menu.</span></li>
#else
#foreach ( $station in $stations)
<li>
	<a href="#">$station.Nom</a>
	<p class="ui-li-aside">
		#if ($station.estEnMaintenance())
		<span class="en-maintenance">Maint.</span>
		#else
		<span class="#if ($station.VelosDisponibles > 0) ok #else ko #end">$station.VelosDisponibles</span><br />
		<span class="#if ($station.PlacesDisponibles > 0) ok #else ko #end">$station.PlacesDisponibles</span>
		#end
	</p>
</li>
#end
#end
